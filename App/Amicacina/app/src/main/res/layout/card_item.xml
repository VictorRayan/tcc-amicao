<?xml version="1.0" encoding="utf-8"?>
<!--XML implementation of Card Layout-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333c43"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/GVimg"
            android:paddingTop="15dp"
            android:layout_width="180dp"
            android:scaleType="centerCrop"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher" />

         <TextView
             android:id="@+id/idTVname"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="@color/white"
             android:text="@string/app_name"
             android:textAllCaps="true"
             android:textAlignment="center" />

        <TextView
            android:id="@+id/idTVraca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="TextView" />

        <TextView
            android:id="@+id/idTVid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="TextView" />

        <TextView
            android:id="@+id/idTVnasc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="TextView" />
        <TextView
            android:id="@+id/idTVidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="TextView" />
        <TextView
            android:id="@+id/idTVstat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="TextView" />
        <TextView
            android:id="@+id/idTVgene"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="TextView" />
        <TextView
            android:id="@+id/idTVport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="TextView" />
        <TextView
            android:id="@+id/idTVcomp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="TextView" />


    </LinearLayout>

</androidx.cardview.widget.CardView>
